package ex7_Ch4;

import java.util.ArrayList;
import java.util.HashMap;

public class Graph<T extends Comparable<T>> {
	private HashMap<T,Node<T>> nodes ;
	private HashMap<T,ArrayList<T>> edges;
	
	public <E> Graph() {
		nodes = new HashMap<>();
		edges = new HashMap<>();
	}
	
	public void addNode(T key,Node<T> n) {
		nodes.put(key,n);
	}
	
	public void addEdge(T n1, T n2) {
		ArrayList<T> vec = nodes.get(n1).neigh;
		vec.add(n2);
		edges.put(n1, vec);
	}
	
	public HashMap<T,Node<T>> getNodes() {
		return new HashMap<T,Node<T>>(nodes);
	}
	
	public  HashMap<T,ArrayList<T>> getEdges(){
		return new HashMap<T,ArrayList<T>>(edges);
		
	}
	
}
