package ex12_ch4;

import java.util.HashMap;

public class NrOfSums {
	
	public int getTotalPaths(BSTree t, int targetSum){
		int totalPaths = 0;
		HashMap<Integer, Integer> apparitions = new HashMap<>();
		
		}
	public void getTotalPaths(Node root,HashMap<Integer,Integer> appar, int targetSum, int partialSum){
		int sum = partialSum + root.data;
		// get or default returns value if key exists or the default value otherwise
		int total = appar.getOrDefault(sum, 0);
		
		if(sum == targetSum)
			total = total + 1;
		appar.put(sum, appar.get(sum) + 1);
		getTotalPaths(root.left,appar,targetSum,sum);
		getTotalPaths(root.right,appar,targetSum,sum);
		// put the old value for key sum back to intial, as we go up to the tree, as calls ended and this node
		// does not count anymore
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
