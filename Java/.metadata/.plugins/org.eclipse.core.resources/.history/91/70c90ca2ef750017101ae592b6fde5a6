public class Flip {
	public int getMaxLength(int n){
		int max = 0;
		int prevL = 0;
		int current = 0;
		while(n !=0 ){
			if((n << 1 & 1) == 0) {
				if((n << 2 & 1) == 1) {
					if( current + prevL > max)
						max =  current + prevL;
						prevL = current;
						current = 0;
				}
			} 
		}
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
